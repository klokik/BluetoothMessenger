			gpios = <&gpio0 11 0>;
			label = "User D3 red";
		};
		green_led: led_2 {
			gpios = <&gpio0 12 0>;
			label = "User D3 green";
		};
		blue_led: led_3 {
			gpios = <&gpio1 9 0>;
			label = "User D3 blue";
		};
	};

