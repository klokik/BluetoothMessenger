/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "reel board";
	compatible = "phytec,reel_board", "nordic,nrf52840-qiaa",
		     "nordic,nrf52840";

	chosen {
		zephyr,console = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

